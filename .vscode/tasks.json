{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "West: debugserver",
			"command": "west",
			"args": [
				"debugserver",
				"--gdb-port",
				"2331"
			],
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "custom",
					"pattern": {
						"regexp": ".",
						"file": 1,
						"location": 1,
						"message": 1
					},
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": "."
					}
				}
			]
		}
	]
}

